<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@color/ColorBlack"
    android:layout_alignParentTop="true"
    tools:context=".MainActivity">

    <!--Textview para poner nuemros + signos que el usuario pulse segun btn-->
    <TextView
        android:id="@+id/tv_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/ColorWhite"
        android:gravity="bottom"
        android:height="180dp" />
    <!--GridLayout para btn de la calculadora-->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_numero"
        android:columnCount="4"
        android:rowCount="5">
    <!--btn`s de la calculadora-->
        <Button
            android:id="@+id/btn_clear"
            style="@style/AppTheme.BotonCalculadora.Primary_orange"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/btn_clear" />

        <Button
            android:id="@+id/btn_dividir"
            style="@style/AppTheme.BotonCalculadora.Primary_orange"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/btn_dividir" />

        <Button
            android:id="@+id/btn_multi"
            style="@style/AppTheme.BotonCalculadora.Primary_white"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/btn_multi" />

        <Button
            android:id="@+id/btn_borrar"
            style="@style/AppTheme.BotonCalculadora.Primary_orange"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/btn_borrar" />

        <Button
            android:id="@+id/btn_num_7"
            style="@style/AppTheme.BotonCalculadora.Primary_white"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/btn_num_7" />

        <Button
            android:id="@+id/btn_num_8"
            style="@style/AppTheme.BotonCalculadora.Primary_white"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/btn_num_8" />

        <Button
            android:id="@+id/btn_num_9"
            style="@style/AppTheme.BotonCalculadora.Primary_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/btn_num_9" />

        <Button
            android:id="@+id/btn_restar"
            style="@style/AppTheme.BotonCalculadora.Primary_orange"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/btn_resta" />

        <Button
            android:id="@+id/btn_num_4"
            style="@style/AppTheme.BotonCalculadora.Primary_white"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/btn_num_4" />

        <Button
            android:id="@+id/btn_num_5"
            style="@style/AppTheme.BotonCalculadora.Primary_white"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/btn_num_5" />


        <Button
            android:id="@+id/btn_num_6"
            style="@style/AppTheme.BotonCalculadora.Primary_white"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/btn_num_6" />


        <Button
            android:id="@+id/btn_suma"
            style="@style/AppTheme.BotonCalculadora.Primary_orange"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/btn_suma" />

        <Button
            android:id="@+id/btn_num_1"
            style="@style/AppTheme.BotonCalculadora.Primary_white"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/btn_num_1" />

        <Button
            android:id="@+id/btn_num_2"
            style="@style/AppTheme.BotonCalculadora.Primary_white"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/btn_num_2" />

        <Button
            android:id="@+id/btn_num_3"
            style="@style/AppTheme.BotonCalculadora.Primary_white"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/btn_num_3" />


        <Button
            android:id="@+id/btn_igual"
            style="@style/AppTheme.BotonCalculadora.Primary_orange"
            android:layout_rowSpan="2"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_rowWeight="2"
            android:text="@string/btn_igual" />

        <Button
            android:id="@+id/btn_num_0"
            style="@style/AppTheme.BotonCalculadora.Primary_orange"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:layout_columnWeight="2"
            android:layout_column="0"
            android:text="@string/btn_num_0" />

        <Button
            android:id="@+id/btn_punto"
            style="@style/AppTheme.BotonCalculadora.Primary_orange"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/btn_punto" />
    </GridLayout>
</RelativeLayout>